<% if @events.present? %>

<table>
<thead>
    <tr>
        <th>Title</th>
        <th>Comment</th>
        <th>User</th>
        <th colspan="3"></th>
    </tr>
</thead>

<tbody>
    <% @events.each do |event| %>
        <tr>
            <td><%= event.title %></td>
            <td><%= event.comment %></td>
            <td><%= event.user_id %></td>
            <td><%= link_to 'Show', event %></td>
            <td><% if can? :update, event %><%= link_to 'Edit', edit_event_path(event) %><% end %></td>
            <td><% if can? :destroy, event %><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
        </tr>
    <% end %>
</tbody>
</table>

<th> Eventos creados esta semana </th>
<%= column_chart Event.group_by_day_of_week(:created_at, format: "%a").count %>
<th> Lugares disponibles según deporte </th>
<%= pie_chart Place.group(:sport_id).count %>

<% else %>
<h1> ¡Ve a crear tu primer evento! </h1>

<%= link_to 'Eventos', new_event_path %>

<% end %>