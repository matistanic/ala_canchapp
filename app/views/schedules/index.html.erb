<p id="notice"><%= notice %></p>

<h1 class="text-center my-5" style="color:#ffc107;">Horarios</h1>

<body class="schedules-body">
  <table background="<%= asset_path 'tablalugares.jpg' %>">
    <thead>
      <tr>
        <th style="background-color: #ffc107;">Descripci√≥n</th>
        <th style="background-color: #ffc107;">Lugar</th>
        <th style="background-color: #ffc107;" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr>
          <td><%= schedule.description %></td>
          <td><%= Place.find_by({:id => schedule.place_id}).name %></td>
          <td><% if can? :manage, schedule %><%= link_to 'Detalles', schedule, class: "button" %><% end %></td>
          <td><% if can? :update, schedule %><%= link_to 'Editar', edit_schedule_path(schedule), class: "button" %><% end %></td>
          <td><% if can? :destroy, schedule %><%= link_to 'Eliminar', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
<br>

<td><% if can? :manage, @schedules %><%= link_to 'Nuevo Horario', new_schedule_path, class: "button" %><% end %></td>
